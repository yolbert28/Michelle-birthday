---
import Card from "./Card.astro";
---

<section class="max-w-[1000px] w-full h-[800px] overflow-hidden flex flex-col items-center">
  <h2 class="w-[80%] text-3xl sm:text-5xl font-bold mt-16 mb-14 text-center" >
    Some of our articles
  </h2>
  <div class="w-full h-[400px] overflow-hidden relative  mb-14">
    <div class= "absolute bg-gradient-to-r from-primary-gray  w-10 h-[400px] z-10"></div>
    <div class= "absolute bg-gradient-to-l from-primary-gray  w-10 h-[400px] z-10 right-0"></div>
    <div id="articles" class="list flex flex-row gap-12 w-[1000px] overflow-x-auto pl-20 pb-36">
      <Card name="Blocks" alt="Blocks" img="constructionBlocks.jpg" price="0.25" stock="20"/>
      <Card name="Cabilla" alt="Cabilla" img="cabillaMedia.webp" price="12" stock="50"/>
      <Card name="Lamina de zinc" alt="Lamina de Zinc" img="laminaDeZinc.webp" price="8" stock="37"/>
      <Card name="Lamina Traslucida" alt="Lamina translucida" img="laminaTraslucida.jpg" price="12" stock="56"/>
      <Card name="Placa Nervada" alt="Placa nervada" img="placasNervadas.webp" price="25" stock="28"/>
    </div>
  </div>
  <a class=" bg-primary-blue text-secondary-blue font-bold text-xl w-[312px] h-[56px] rounded-md flex justify-center items-center" href="/Articles">More articles</a>
</section>
<script>

  let articles = document.getElementById('articles');
  let items = document.getElementsByClassName('item');

  let scroll = 0;
  let width = 250 * items.length;

  if(articles)
    setInterval(() => {
      articles.scrollTo({
        left: scroll,
        behavior: 'smooth'
      })
      scroll += 320;
      if(scroll >= width)
        scroll = 0;
    }, 4000);

  setInterval(() => {
    
  }, 5000);
</script>