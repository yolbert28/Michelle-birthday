---
import Layout from "../layouts/Layout.astro"
import Card from "../components/Card.astro"
import MagnifyingGlassIcon from "../components/MagnifyingGlassIcon.astro"
import LeftArrowIcon from "../components/LeftArrowIcon.astro"
import RightArrowIcon from "../components/RightArrowIcon.astro"
---

<Layout title="Matepla">
  <h1 class="text-4xl sm:text-5xl font-bold text-text-gray text-center mt-16">Our articles</h1>
  <div class="w-[80%] max-w-[700px] relative flex items-center justify-center">
    <input class="bg-tertiary-gray h-14 sm:h-16 w-[100%] max-w-[700px] my-8 rounded-3xl pl-8" type="text" placeholder="Find it">
    <button class="bg-primary-blue absolute right-0 my-8 pl-7 pr-9 rounded-r-3xl h-14 sm:h-16" >
      <MagnifyingGlassIcon/>
    </button>
  </div>
  <div class="w-full max-w-[1000px] grid gap-10 justify-center justify-items-center" style=" grid-template-columns: repeat(auto-fit, 350px);">
    <Card name="Blocks" alt="Blocks" img="constructionBlocks.jpg" price="0.25" stock="20"/>
    <Card name="Cabilla" alt="Cabilla" img="cabillaMedia.webp" price="12" stock="50"/>
    <Card name="Lamina de zinc" alt="Lamina de Zinc" img="laminaDeZinc.webp" price="8" stock="37"/>
    <Card name="Lamina Traslucida" alt="Lamina translucida" img="laminaTraslucida.jpg" price="12" stock="56"/>
    <Card name="Placa Nervada" alt="Placa nervada" img="placasNervadas.webp" price="25" stock="28"/>
    <Card name="Blocks" alt="Blocks" img="constructionBlocks.jpg" price="0.25" stock="20"/>
    <Card name="Cabilla" alt="Cabilla" img="cabillaMedia.webp" price="12" stock="50"/>
    <Card name="Lamina de zinc" alt="Lamina de Zinc" img="laminaDeZinc.webp" price="8" stock="37"/>
    <Card name="Lamina Traslucida" alt="Lamina translucida" img="laminaTraslucida.jpg" price="12" stock="56"/>
    <Card name="Placa Nervada" alt="Placa nervada" img="placasNervadas.webp" price="25" stock="28"/>
  </div>
  <div class="flex flex-row justify-center items-center gap-6 sm:gap-10 w-full max-w-[1000px] my-20">
    <a class="bg-secondary-gray p-3 px-5 rounded-md" href="/"><LeftArrowIcon width="24px"/></a>
    <ul class="flex flex-row justify-around w-40">
      <li class="font-bold text-xl">1</li>
      <li class="font-bold text-xl">2</li>
      <li class="font-bold text-xl">3</li>
      <li class="font-bold text-xl">...</li>
    </ul>
    <a class="bg-secondary-gray p-3 px-5 rounded-md" href="/"><RightArrowIcon width="24px"/></a>
  </div>
</Layout>